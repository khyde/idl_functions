PRO IMAGE_2PSERIES

PX = 5UL
PY = 3UL
PXPY = PX*PY

STOP
CLOSE,/ALL
N_IMAGES = 4
IMAGE=LINDGEN(PX,PY)
OPENW,1,'PSERIES.LON'
N_BYTES = SIZE_BYTES(IMAGE[0])
N_BYTES=1

FOR _IMAGE = 0L,N_IMAGES-1L DO BEGIN

	FOR ROW = 0L,PY-1L DO BEGIN
		FOR COL = 0L,PX-1 DO BEGIN

			PTR =   (ULONG64(COL)* _IMAGE)* N_BYTES  + (COL+ROW)*PXPY*N_BYTES
	    PRINT, PTR
		    STOP
		ENDFOR
	ENDFOR
ENDFOR


STOP



END
